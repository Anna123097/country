<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/fon"
    >


    <ImageView
        android:id="@+id/imageAnswer3"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
         />

    <ImageView
        android:id="@+id/imageAnswer1"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/btn"
       app:layout_constraintBottom_toTopOf="@+id/imageAnswer3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        />

    <ImageView
        android:id="@+id/imageAnswer4"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        />

    <ImageView
        android:id="@+id/imageAnswer2"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/btn"
        app:layout_constraintBottom_toTopOf="@+id/imageAnswer4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
         />

    <ImageView
        android:id="@+id/imageAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/numm0"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
         />

    <ImageView
        android:id="@+id/imageFlag"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/btn"
        app:layout_constraintTop_toBottomOf="@+id/imageAnswer"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/textaright"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
         />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/textall"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/num10"
       app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>