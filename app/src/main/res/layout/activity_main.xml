<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fon"
    >

    <ImageView
        android:id="@+id/imagePlay"
        android:layout_width="140dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/btnplaay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
         />

    <ImageView
        android:id="@+id/imageRules"
        android:layout_width="140dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/btnrulees"
        app:layout_constraintTop_toBottomOf="@+id/imagePlay"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="130dp"
         />

    <ImageView
        android:id="@+id/imageExit"
        android:layout_width="140dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/btnexiit"
        app:layout_constraintTop_toBottomOf="@+id/imageRules"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
         />
</androidx.constraintlayout.widget.ConstraintLayout>